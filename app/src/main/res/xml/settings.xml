<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory
        android:title="@string/pref_category_appearance">

        <androidx.preference.SwitchPreferenceCompat
            android:key="PREF_NIGHT_MODE"
            android:title="@string/pref_night_mode"/>

        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="PREF_SHOW_NOTES_CONTENT"
            android:title="@string/pref_show_notes_content"/>

        <androidx.preference.ListPreference
            android:key="PREF_SWIPE_LEFT_ACTION"
            android:entries="@array/swipe_action_entries"
            android:defaultValue="swipe_action_none"
            android:summary="%s"
            android:entryValues="@array/swipe_values"
            android:title="@string/pref_swipe_left"/>

        <androidx.preference.ListPreference
            android:key="PREF_SWIPE_RIGHT_ACTION"
            android:entries="@array/swipe_action_entries"
            android:defaultValue="swipe_action_none"
            android:summary="%s"
            android:entryValues="@array/swipe_values"
            android:title="@string/pref_swipe_right"/>

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:title="@string/pref_category_editor">

        <androidx.preference.ListPreference
            android:key="PREF_FONT_SIZE"
            android:entries="@array/font_sizes"
            android:defaultValue="pref_font_size_default"
            android:summary="%s"
            android:entryValues="@array/font_sizes_values"
            android:title="@string/pref_font_size"/>

    </androidx.preference.PreferenceCategory>

