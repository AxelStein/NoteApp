    <androidx.preference.PreferenceCategory
        android:title="@string/pref_category_backup">

        <androidx.preference.Preference
            android:key="export_file"
            android:title="@string/pref_export"/>

        <androidx.preference.Preference
            android:key="import_file"
            android:title="@string/pref_import"/>

        <androidx.preference.Preference
            android:key="export_drive"
            android:title="@string/pref_export_drive"/>

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:title="@string/pref_about_app">

        <androidx.preference.Preference
            android:key="rate_app"
            android:title="@string/pref_rate_app"/>

        <androidx.preference.Preference
            android:key="app_version"
            android:title="@string/app_name"/>

    </androidx.preference.PreferenceCategory>


</androidx.preference.PreferenceScreen>