    <android.support.v7.preference.PreferenceCategory
        android:title="@string/pref_category_backup">

        <Preference
            android:key="export"
            android:title="@string/pref_export"/>

        <Preference
            android:key="import"
            android:title="@string/pref_import"/>

        <!--
        <Preference
            android:key="backup_manager"
            android:title="@string/pref_backup_manager"/>
        -->

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/pref_about_app">

        <Preference
            android:key="rate_app"
            android:title="@string/pref_rate_app"/>

        <Preference
            android:key="app_version"
            android:title="@string/app_name"/>

        <!--
