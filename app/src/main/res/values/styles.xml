<resources>

    <style name="AppTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="height">48dp</item>
    </style>

    <style name="AppThemeDark.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="height">48dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_black_24dp</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="colorControlNormal">@color/text_color_secondary_light</item>
        <item name="menuItemTintColor">@color/text_color_secondary_light</item>
        <item name="nightModeButtonTintColor">@color/text_color_secondary_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="checkBoxTint">@color/checkbox_tint_light</item>
        <item name="editTextLineColor">@color/edit_text_line_color_light</item>
        <item name="keepScreenOnColor">@color/keep_screen_on_color_light</item>
        <item name="notePinColor">@color/color_accent</item>
        <item name="noteStarColor">@color/color_starred</item>
        <item name="searchSelectorColor">@color/search_selector_color_light</item>
        <item name="searchSelectorCurrentColor">@color/search_selector_current_color_light</item>
        <item name="selectedNotebookBackgroundColor">@color/selected_notebook_background_color_light</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogLight</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="textColorError">@color/text_error_light</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@android:color/white</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">?attr/colorAccent</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#222E3C</item>
        <item name="colorPrimaryDark">#19222D</item>
        <item name="colorAccent">@color/color_accent_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_white_24dp</item>
        <item name="actionModeStyle">@style/AppThemeDark.ActionMode</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="menuItemTintColor">@color/text_color_primary_dark</item>
        <item name="nightModeButtonTintColor">@color/color_accent_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogDark</item>
        <item name="checkBoxTint">@color/checkbox_tint_dark</item>
        <item name="editTextLineColor">@color/edit_text_line_color_dark</item>
        <item name="keepScreenOnColor">@color/keep_screen_on_color_dark</item>
        <item name="notePinColor">@color/color_accent_dark</item>
        <item name="noteStarColor">@color/color_starred</item>
        <item name="searchSelectorColor">@color/search_selector_color_dark</item>
        <item name="searchSelectorCurrentColor">@color/search_selector_current_color_dark</item>
        <item name="selectedNotebookBackgroundColor">@color/selected_notebook_background_color_dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
        <item name="textColorError">@color/text_error_dark</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text
        </item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">?attr/colorAccent</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_header_selection_text</item>
    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/window_background_dark</item>
        <item name="colorAccent">@color/color_accent_dark</item>
    </style>

    <style name="BottomSheetDialogLight" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalLight</item>
    </style>

    <style name="BottomSheetModalLight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/window_background_light</item>
        <item name="behavior_peekHeight">900dp</item>
    </style>

    <style name="BottomSheetDialogDark" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalDark</item>
    </style>

    <style name="BottomSheetModalDark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/window_background_dark</item> <!--#ff424242-->
        <item name="behavior_peekHeight">900dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>

    <style name="NotebookPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout">@layout/layout_preference_category</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen.Material</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategory</item>
        <item name="preferenceStyle">@style/Preference.Material</item>
        <item name="preferenceInformationStyle">@style/Preference.Information.Material</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference.Material</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Material</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference.Material</item>
        <item name="dropdownPreferenceStyle">@style/Preference.DropDown.Material</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
    </style>

    <!--
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    -->

</resources>
