<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:background="@null"
                android:hint="@string/hint_title"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|textCapSentences"
                android:maxLength="@integer/max_title"
                android:textSize="20sp"
                android:textStyle="bold"

                tools:text="10 Best Note Apps for iPhone You Can Use"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"

                app:counterEnabled="true"
                app:counterMaxLength="@integer/max_content"
                app:hintEnabled="false">

                <com.axel_stein.noteapp.views.LinedEditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:hint="@string/hint_content"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textNoSuggestions|textCapSentences|textMultiLine"
                    android:lineSpacingExtra="4dp"
                    android:maxLength="@integer/max_content"
                    android:minHeight="48dp"
                    android:overScrollMode="never"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"

                    android:linksClickable="true"
                    android:autoLink="all"

                    tools:text="http://google.com +380985524370 iPhone has become one of the most versatile tech tools available today. We perform a multitude of functions using our iPhones. We use them to make calls, send messages, capture photos, play games, check our emails, set reminders, and much more. Of course, the usage pattern differs from person to person. When it comes to me, one of the foremost things I use my iPhone for is jotting down notes. I use it because itâ€™s always available to me and everything I note down is synced across my devices. I have used a lot of note taking apps in the past, and there are quite a few good ones on the App Store. So, if you have been looking for the best note taking apps for iOS, we have you covered. Here are the 10 best note apps for iPhone you can use:"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    -->

    <RelativeLayout
        android:id="@+id/bottom"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <!--
        <ImageButton
            android:id="@+id/button_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
            android:contentDescription="@string/content_clear"
            android:src="@drawable/ic_list_white_24dp"
            android:tint="?attr/menuItemTintColor"/>
        -->

        <TextView
            android:id="@+id/text_update"
            tools:text="23 oct"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?attr/menuItemTintColor"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap"/>

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
            android:contentDescription="@string/content_clear"
            android:src="@drawable/ic_more_horiz_white_24dp"
            android:layout_alignParentRight="true"
            android:tint="?attr/menuItemTintColor"/>

    </RelativeLayout>

    <View
        android:layout_above="@+id/bottom"
        android:layout_alignWithParentIfMissing="true"
        android:background="@drawable/shadow_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</RelativeLayout>